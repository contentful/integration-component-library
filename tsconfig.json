{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*", "helpers/*"]
    },
    "target": "esnext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "types": [
      "vite/client",
      "node"
    ],
},
"include": ["src", "lib/index.ts"],
"references": [
  {
    "path": "./tsconfig.node.json"
  }
],
}